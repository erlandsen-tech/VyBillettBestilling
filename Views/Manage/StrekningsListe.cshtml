                    @Html.DisplayFor(modelItem => item.hovstr_kortnavn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nett_id)
                </td>
                <td>
                    @Html.ActionLink("Rediger", "Edit", new { id = item.id }) |
