                <div class="my-custom-scrollbar table-wrapper-scroll-y">
                    <table class=" table tabellbakgrunn table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.hovstr_navn)
            </th>
            <th>
