@model VyBillettBestilling.ViewModels.IndexViewModel
@{
    ViewBag.Title = "Administrasjon";
}

<link href="~/Content/Admin.css" rel="stylesheet">
<div class="bg femti ">
    <div class="container">
    <h2>Administrasjon</h2>

    <h4></h4>
    <hr />
    <dl class="dl-horizontal row">
        <dt>Passord:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {

                @Html.ActionLink("Skift Passord", "ChangePassword")
            }
            else
            {
                <p class="text-danger">Noe er galt, og vi kan ikke finne passordet ditt i databasen.</p>
            }
            ]
        </dd>
        <dt>Strekninger:</dt>
        <dd>
            [
            @Html.ActionLink("Strekninger", "StrekningsListe")
            ]
        </dd>
        <dt>Stasjoner:</dt>
        <dd>
            [
            @Html.ActionLink("Stasjoner", "StasjonsListe")
            ]
        </dd>
        <dt>Banenett:</dt>
        <dd>
            [
            @Html.ActionLink("Banenett", "NettListe")
            ]
        </dd>
        <dt>Priser og rabatter:</dt>
        <dd>
            [
            @Html.ActionLink("Priser", "PriserOgPassasjerer")
            ]
        </dd>
    </dl>
</div>
</div>
